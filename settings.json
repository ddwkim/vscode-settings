{
    "terminal.integrated.defaultProfile.linux": "zsh",
    "workbench.colorTheme": "Default High Contrast",
    "workbench.editorAssociations": {
        "*.xls": "default"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.inlineSuggest.enabled": true,
    "editor.formatOnSave": true,
    "editor.inlineSuggest.showToolbar": "always",
    "python.languageServer": "Pylance",
    "python.linting.flake8Args": [
        "--max-line-length 120",
        "--ignore F811,F841,E203,E402,E501,E712,W503"
    ],
    "python.autoComplete.extraPaths": [],
    "python.formatting.provider": "black",
    "python.analysis.extraPaths": [],
    "black-formatter.importStrategy": "fromEnvironment",
    "black-formatter.args": [
        "--line-length",
        "80"
    ],
    "[python]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
    },
    "cmake.configureOnOpen": true,
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.formatting": "clangFormat",
    "clang-format.executable": "/usr/bin/clang-format",
    "clang-format.language.cuda.enable": true,
    "clang-format.language.cuda.style": "Google",
    "clang-format.language.cuda.fallbackStyle": "LLVM",
    "clang-format.language.c.enable": true,
    "clang-format.language.c.style": "Google",
    "clang-format.language.c.fallbackStyle": "LLVM",
    "clang-format.language.cpp.enable": true,
    "clang-format.language.cpp.style": "Google",
    "clang-format.language.cpp.fallbackStyle": "LLVM",
    "clang-format.style": "Google",
    "clang-format.fallbackStyle": "LLVM",
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "[cuda-cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "git.autofetch": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false
    },
    "github.copilot.advanced": {
        "authProvider": "github"
    },
}
